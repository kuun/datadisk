{
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(cargo build:*)",
      "Bash(grep:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/intercept-git-commit.py"
          }
        ]
      }
    ]
  }
}
